<Window x:Class="menu_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menu_app"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Authorization" Height="600" Width="800">
    <Grid Background="AliceBlue">
        <Border MinWidth="200" Margin="100" Background="BurlyWood" VerticalAlignment="Center" Padding="50" CornerRadius="20">
            <StackPanel>

                <Grid Margin="0 0 0 -160">
                    <Button HorizontalAlignment="Center" Content="Войти" Click="Button_input_Click"/>
                </Grid>

                <TextBox x:Name="login" materialDesign:HintAssist.Hint="Login" />
                <PasswordBox x:Name="password" materialDesign:HintAssist.Hint="Password"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
